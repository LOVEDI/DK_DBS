<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:actualImageScaleType="centerInside"
        fresco:roundAsCircle="true"
        fresco:roundingBorderWidth="1dp"
        android:id="@+id/dbs_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/dbs_name"
        android:layout_toRightOf="@+id/dbs_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/dbs_position"
        android:layout_below="@+id/dbs_name"
        android:layout_toEndOf="@+id/dbs_title" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/dbs_title"
        android:id="@+id/dbs_cover" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="直播"
        android:layout_marginTop="15dp"
        android:id="@+id/dbs_state"
        android:background="@drawable/but_styles"
        android:layout_alignTop="@+id/dbs_cover"
        android:layout_alignParentEnd="true" />


</RelativeLayout>